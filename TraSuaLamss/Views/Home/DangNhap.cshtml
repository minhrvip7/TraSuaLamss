@model TraSuaLamss.Models.DangNhapModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng Nhập</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        .abc {
            text-align: center;
        }
        @*.login{
            margin-top:100px;
        }*@
        .valid {
            padding-left: 13px;
        }
    </style>
</head>
<body>
    <div id="layoutAuthentication" class="login">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header" style="background-color: #f4cccc "><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body" style="background-color: #f7e3e3 ">
                                    @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        if (!ViewData.ModelState.IsValid)
                                        {
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger abc" })
                                        }
                                        else
                                        {
                                            <br />
                                        }
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control" })
                                            <label>Tên đăng nhập</label>
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger valid" })
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                                            <label>Mật khẩu</label>
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger valid" })
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="#">Quên mật khẩu?</a>
                                            <input type="submit" value="Đăng Nhập" class="btn btn-primary" />
                                        </div>
                                    }
                                </div>
                                <div class="card-footer text-center py-3" style="background-color: #f4cccc ">
                                    <div class="small"><a href="DangKy">Chưa có tài khoản? Đến đăng ký!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
