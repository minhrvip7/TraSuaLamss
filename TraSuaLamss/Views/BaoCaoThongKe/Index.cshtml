@model List<TraSuaLamss.Models.BaoCaoThang>
@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
            Tháng
        </th>
        <th>
            Số lượng đơn
        </th>
        <th>
            Doanh thu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Thang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuongDonHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TongTien)
    </td>
    <td>
        @Html.ActionLink("Chi tiết", "Details", new { month = item.Thang })
    </td>
</tr>
    }

</table>
<p></p>
