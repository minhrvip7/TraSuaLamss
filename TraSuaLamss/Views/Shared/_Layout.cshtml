                    </form>
                </div>
                <div class="col-8">
                    <nav class="main-nav">
                        <a href="/Home/Index" class="logo">
                            <img src="~/Content/Template/assets/images/loading.gif">
                        </a>
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="/Home/Index" class="active">TRANG CHỦ</a></li>
                            <li><a href="/GioiThieu/Index">GIỚI THIỆU</a></li>
                            <li class="submenu">
                                <a href="/SANPHAMs/Index">SẢN PHẨM</a>
                                <ul>
                                    <li><a href="#">Loại 1</a></li>
                                    <li><a href="#">Loại 2</a></li>
                                    <li><a href="#">Loại 3</a></li>
