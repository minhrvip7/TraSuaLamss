@model IList<TraSuaLamss.Models.SanPhamTrongDonHang>

@{
    ViewBag.Title = "Details";
}


<body>

    <p>
        <h3 align="center">Đơn hàng: </h3><h2 align="center" style="color:red">#@ViewBag.donHang.MaDH</h2>
    </p>
    <br />

    <table class="dathang" align="center">
        <thead>
            <tr>
            </tr>
            <tr>
                <td>Khách hàng: </td>
                <td colspan="3">@ViewBag.Ten</td>
            </tr>
            <tr>
                <td>Địa chỉ: </td>
                <td colspan="3">@ViewBag.donHang.DiaChiGiaoHang"</td>
            </tr>
            <tr>
                <td>Ngày đặt: </td>
                <td colspan="3">@ViewBag.donHang.NgayDat</td>
            </tr>
            <tr>
                <td>Thanh toán: </td>
                <td colspan="3">@ViewBag.donHang.PhuongThucThanhToan</td>
            </tr>
            <tr>
                <td>Tình trạng giao hàng: </td>
                <td colspan="3">@ViewBag.donHang.TinhTrangGiaoHang</td>
            </tr>
        </thead>
        <br />
        <br />
        <tbody class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th class="td-center">Đơn giá</th>
                    <th class="td-center">Số lượng</th>
                    <th class="td-center">Thành tiền</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.sanPham.TenSP</td>
                    <td class="td-center">
                        @{
                            var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                            string dongia = String.Format(format, "{0:c0}", item.chiTietDonHang.DonGia);
                            string thanhtien = String.Format(format, "{0:c0}", item.chiTietDonHang.DonGia * item.chiTietDonHang.SoLuong);
                        }
                        @dongia
                    </td>
                    <td class="td-center">@item.chiTietDonHang.SoLuong</td>
                    <td class="text-md-right">
                        @thanhtien
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3" style="text-align:right;">Tổng tiền: </td>
                <td class="td-center">
                    @{
                        var format1 = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                        string tongtien = String.Format(format1, "{0:c0}", ViewBag.donHang.ThanhTien);
                    }
                    @tongtien
                </td>
            </tr>
        </tbody>
    </table>
</body>
<p>
    <button type="button" class="btn btn-dark" onclick="history.back()">Trở về</button>
</p> 
