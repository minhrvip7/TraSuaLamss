@model PagedList.IPagedList<TraSuaLamss.Models.NhanVien>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<section class="team section-bg">
    <h2 style="padding-left:2%">Danh sách nhân viên</h2>
    <br />
    <br />
    <div class="btm btn-default" style="padding-left:5%">
        <a class="btn btn-success" href="@Url.Action( "Create", "NhanVien")">
            Thêm mới
            <img src="~/Content/Img/plus_math_30px.png" height="20" width="20" />
        </a>
    </div>
    <br />
    <p>
        @using (Html.BeginForm())
        {
            <div class="input-group mb-3" style="padding-left:5%">
                @*<button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" value="Tên">Tên</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" onclick="dropdown(this.innerHTML);">Tên</a>
                        <div role="separator" class="dropdown-divider"></div>
                        <a class="dropdown-item" onclick="dropdown(this.innerHTML);">Mã</a>
                    </div>

                    <script>
                        function dropdown(val) {
                            var y = document.getElementsByClassName('btn btn-outline-secondary dropdown-toggle');
                            var aNode = y[0].innerHTML = val + ' <div class="dropdown-menu"></div>'; // Append
                        }
                    </script>*@
                <div class="col-xs-2">
                    @Html.TextBox("searchstr", null, new { @class = "form-control", placeholder = "Nhập" })
                </div>
                <div class="input-group-append">
                    <button class="btn btn-warning" type="submit">
                        Tìm kiếm
                        <img src="~/Content/Img/search_32px.png" width="20" height="20">
                    </button>
                </div>
            </div>
        }
    </p>
    <p class="font-italic" style="padding-left:5%; margin-top:1px">Nhập chữ để tìm kiếm tên, số để tìm kiếm mã.</p>


    <table class="table table-striped table-bordered" style="padding-left:5%">
        <thead class="thead-light">
            <tr>
                <th class="text-center">Mã</th>
                <th class="text-center">Họ và Tên</th>
                <th class="text-center">Tài khoản</th>
                <th class="text-center">Giới tính</th>
                <th class="text-center">Email</th>
                <th class="text-center">Địa chỉ</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">Tiền lương</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MaNV)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TenNV)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TAIKHOAN.Username)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td class="text-md-right">@Html.DisplayFor(modelItem => item.DienThoai)</td>
                    <td class="text-md-right">@String.Format(format, "{0:c0}", @item.Luong)</td>
                    <td class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("Edit", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/edit_24px.png" height="20" width="20" />
                        </a>
                        <a class="btn btn-info" href="@Url.Action("Details", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/information_50px.png" height="20" width="20" />
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/Delete_24px.png" height="20" width="20" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <br />
    <centrer>
        <div class="center2" style="text-align:center">
            @if (Model.PageCount > 1)
            {
                <strong>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </strong>
            }
        </div>
    </centrer>

    <br />
    <p>
        <button type="button" class="btn btn-dark" onclick="history.back()">Trở về</button>
    </p>
</section>