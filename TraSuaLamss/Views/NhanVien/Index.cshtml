@model PagedList.IPagedList<TraSuaLamss.Models.NhanVien>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<style>
    .center2 {
        margin: auto;
        width: 0%;
        padding: 0px;
    }

</style>
<section id="team" class="team section-bg">
    <h2 style="padding-left:2%">Danh sách nhân viên</h2>
    <br />
    <br />
    <br />
    <br />

    <div class="btm btn-default" style="padding-left:5%">
        <a class="btn btn-success" href="@Url.Action( "Create", "NhanVien")">
            Thêm mới
            <img src="~/Content/Img/add_80px.png" height="20" width="20" />
        </a>
    </div>
    <br />
    <p>
        @using (Html.BeginForm())
        {
            <div class="input-group mb-3">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" value="Tên">Tên</button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" onclick="dropdown(this.innerHTML);">Tên</a>
                    <div role="separator" class="dropdown-divider"></div>
                    <a class="dropdown-item" onclick="dropdown(this.innerHTML);">Mã</a>
                </div>

                <script>
                    function dropdown(val) {
                        var y = document.getElementsByClassName('btn btn-outline-secondary dropdown-toggle');
                        var aNode = y[0].innerHTML = val + ' <div class="dropdown-menu"></div>'; // Append
                    }
                </script>

                <div class="col-xs-2">
                    @Html.TextBox("searchstr", null, new { @class = "form-control", placeholder = "Nhập" })
                </div>
                <div class="input-group-append">
                    <button class="btn btn-success" type="submit">Tìm kiếm</button>
                </div>
            </div>

        }
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Mã</th>
                <th>Họ và Tên</th>
                <th>Tài khoản</th>
                <th>Giới tính</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Số tài khoản</th>
                <th>Tiền lương</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaNV)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                    <td>@Html.DisplayFor(modelItem => item.TAIKHOAN.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td class="text-md-right">@Html.DisplayFor(modelItem => item.DienThoai)</td>
                    <td class="text-md-right">@Html.DisplayFor(modelItem => item.STK)</td>
                    <td class="text-md-right">@String.Format(format, "{0:c0}", @item.Luong)</td>
                    <td>
                        <a class="btn btn-outline-primary" href="@Url.Action("Edit", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/edit_80px.png" height="20" width="20" />
                        </a>
                        <a class="btn btn-outline-info" href="@Url.Action("Details", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/info_80px.png" height="20" width="20" />
                        </a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete", "NhanVien", new { id = item.MaNV })">
                            <img src="~/Content/Img/delete_80px.png" height="20" width="20" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <br />
    <centrer>
        @*<div style="text-align:center">Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) / @Model.PageCount</div>*@
        <div class="center2" style="text-align:center">
            @if (Model.PageCount > 1)
            {
                <strong>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </strong>
            }
        </div>
    </centrer>

    <br />
    <p>
        <button type="button" class="btn btn-dark" onclick="history.back()">Trở về</button>
    </p>
</section>