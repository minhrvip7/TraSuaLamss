                @Html.ValidationMessageFor(model => model.Luong, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group"  style="padding-left:15%">
            <div class="col-md-offset-2 col-md-3">
                <button type="submit" value="Thêm mới" class="btn btn-success">Thêm mới
                    <img src="~/Content/Img/add_80px.png" height="20" width="20" />
                </button>
            </div>
        </div>
    </div>
}

<p>
    <button type="button" class="btn btn-dark" onclick="history.back()">Trở về</button>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
