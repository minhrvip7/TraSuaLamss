@model TraSuaLamss.Models.NhanVien

@{
    ViewBag.Title = "Create";
}

<h2 style="padding-left:2%">Thêm mới nhân viên</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="padding-left:2%">Nhân viên</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.MaNV, "Mã nhân viên", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.TenNV, "Họ và Tên", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.GioiTinh, "Giới tính", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" }) @*radio button (nam / nu)*@
                <div class="col-md-3">
                    Nam&emsp;&emsp;@Html.RadioButtonFor(m => m.GioiTinh, "Nam", new { @class = "form-check-input" })
                    Nữ &emsp;&emsp;@Html.RadioButtonFor(m => m.GioiTinh, "Nữ", new { @class = "form-check-input" })
                    Khác &emsp;&emsp;@Html.RadioButtonFor(m => m.GioiTinh, "Khác", new { @class = "form-check-input" })
                    @*@Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>
        </div>

            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.NgaySinh, "Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.Username, "Tên đăng nhập", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                <div class="col-md-2">
                    @*@Html.DropDownList("Username", null, htmlAttributes: new { @class = "form-control" })*@
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
        </div>

            <div class="form-group"  style="padding-left:15%">
            @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
